<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.renzh.customviewtest"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible" >

        <ToggleButton
            android:id="@+id/tbt_extend"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:onClick="onXmlBtClick"
            android:textOff="选延定"
            android:textOn="选延变" />

        <ToggleButton
            android:id="@+id/tbt_roate"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:onClick="onXmlBtClick"
            android:textOff="旋转定"
            android:textOn="旋转变" />

        <ToggleButton
            android:id="@+id/tbt_sweep"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:onClick="onXmlBtClick"
            android:textOff="扫射定"
            android:textOn="扫射变" />

        <ToggleButton
            android:id="@+id/tbt_scale"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:onClick="onXmlBtClick"
            android:textOff="缩放定"
            android:textOn="绽放 变" />

        <ToggleButton
            android:id="@+id/tbt_alpha"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:onClick="onXmlBtClick"
            android:textOff="透明定"
            android:textOn="透明变" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible" >

        <Button
            android:id="@+id/bt_stop_anim"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:onClick="onXmlBtClick"
            android:text="停止动画" />

        <Button
            android:id="@+id/bt_reset_data"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:onClick="onXmlBtClick"
            android:text="reset data" />

        <ToggleButton
            android:id="@+id/tbt_switch"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onXmlBtClick"
            android:textOff="关"
            android:textOn="开" />
    </LinearLayout>

    <com.howbuy.lib.control.curveview.CircleView
        android:id="@+id/circleview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="3" />

</LinearLayout>