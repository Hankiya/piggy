<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible" >
        <Button
            android:id="@+id/bt_anim3d"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:checked="true"
            android:onClick="onXmlBtClick"
            android:text="anim" />

        <Button
            android:id="@+id/bt_hide"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:checked="true"
            android:onClick="onXmlBtClick"
            android:text="out" />

        <Button
            android:id="@+id/bt_show"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:checked="true"
            android:onClick="onXmlBtClick"
            android:text="in" />
    </LinearLayout>

    <com.howbuy.lib.control.AnimAlphaFrame
        android:id="@+id/lay_tran"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ff00f11f" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <include
                android:id="@+id/vip_head_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                layout="@layout/com_vip_head" />
        </LinearLayout>
    </com.howbuy.lib.control.AnimAlphaFrame>

</LinearLayout>