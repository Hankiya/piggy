<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:orientation="vertical">

	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="horizontal">
		<Button android:id="@+id/bt_test" android:layout_width="0dp"
			android:layout_height="wrap_content" android:text="TEST"
			android:layout_weight="1" android:onClick="onXmlBtClick" />
		<Button android:id="@+id/bt_change" android:layout_width="0dp"
			android:layout_weight="1" android:layout_height="wrap_content"
			android:text="CHANGE" android:onClick="onXmlBtClick" />
	</LinearLayout>

	<LinearLayout android:layout_width="wrap_content"
		android:padding="10dp" android:background="#ff0000aa" android:gravity="bottom"
		android:layout_height="wrap_content" android:orientation="horizontal">
		<com.howbuy.control.SlidBitView
			android:background="#fff" android:padding="1dp" android:id="@+id/tv_bit"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />
		<EditText android:layout_width="100dp" android:layout_height="wrap_content"
			android:id="@+id/et_value" />
	</LinearLayout>

</LinearLayout>