<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <solid android:color="#A4A09C" />
            <padding android:left="2dp"/>
            
            <corners
                android:topRightRadius="3dp" android:bottomRightRadius="3dp" android:topLeftRadius="0dp" android:bottomLeftRadius="0dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="270"
                android:endColor="#CED4D7"
                android:startColor="#F5F5F5" />
             <corners
                android:topRightRadius="3dp" android:bottomRightRadius="3dp" android:topLeftRadius="0dp" android:bottomLeftRadius="0dp"/>

        </shape>
    </item>

</layer-list>