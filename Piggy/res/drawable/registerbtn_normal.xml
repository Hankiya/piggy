<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <solid android:color="#90000000" />

            <corners android:radius="8dp" />

            <padding
                android:bottom="4dp"
                android:left="4dp"
                android:right="4dp"
                android:top="4dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="270"
                android:endColor="#2791BA"
                android:startColor="#46B4DF" />
            <corners android:radius="5dp" />
               <padding
                android:bottom="8dp"
                android:left="4dp"
                android:right="4dp"
                android:top="8dp" />
        </shape>
    </item>

</layer-list>