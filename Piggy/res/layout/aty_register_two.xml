<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:paddingBottom="@dimen/call_padding_buttom"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <include layout="@layout/lay_notify"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin_os7_top"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/setting_top_bg"
                    android:baselineAligned="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/activity_horizontal_margin" >

                    <TextView
                        android:id="@+id/username"
                        style="@style/piggy_intput_lefttext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text="@string/youname" />

                    <howbuy.android.piggy.widget.ClearableEdittext
                        android:id="@+id/user_name"
                        style="@style/piggy_intput"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/username"
                        android:background="@drawable/edit_bg"
                        android:hint="@string/hint_username" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/setting_buttom_bg"
                    android:baselineAligned="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/activity_horizontal_margin" >

                    <TextView
                        android:id="@+id/pwd"
                        style="@style/piggy_intput_lefttext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text="@string/usernamehint" />

                    <howbuy.android.piggy.widget.ClearableEdittext
                        android:id="@+id/user_no"
                        style="@style/piggy_intput"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/pwd"
                        android:background="@drawable/edit_bg"
                        android:digits="1234567890xX"
                        android:hint="@string/hint_idcard18"
                        android:inputType="textEmailAddress" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/setting_buttom_bg"
                android:orientation="vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/username"
                        style="@style/piggy_intput_lefttext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text="@string/pwdhint" />

                    <howbuy.android.piggy.widget.ClearableEdittext
                        android:id="@+id/user_pwd"
                        style="@style/piggy_intput"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/username"
                        android:background="@drawable/edit_bg"
                        android:hint="@string/hint_userpwd" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/setting_buttom_bg"
                android:orientation="vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/username"
                        style="@style/piggy_intput_lefttext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text="@string/tpwd" />

                    <howbuy.android.piggy.widget.ClearableEdittext
                        android:id="@+id/trade_pwd"
                        style="@style/piggy_intput"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/username"
                        android:background="@drawable/edit_bg"
                        android:hint="@string/hint_tradepwd"
                        android:inputType="number" />
                </RelativeLayout>
            </LinearLayout>

            <howbuy.android.piggy.widget.ImageTextBtn
                android:id="@+id/submit_btn"
                style="@style/piggy_text_button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="10dip"
                android:background="@drawable/btn_sure_bg"
                android:clickable="true"
                android:text="@string/confirmregister" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="5dp" >

                <CheckBox
                     style="@style/piggy_checkBox"
                    android:id="@+id/checkf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true" />

                <TextView
                    android:id="@+id/clecktext"
                    style="@style/piggy_text_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我已阅读并同意《好买电子交易服务协议》" />
            </LinearLayout>
        </LinearLayout>

        <include layout="@layout/telephone_lay" />
    </RelativeLayout>

</ScrollView>