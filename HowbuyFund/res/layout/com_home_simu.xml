<com.howbuy.control.HomeSimuLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="wrap_content"
	android:paddingBottom="2dp" android:layout_marginBottom="25dp">
	<ImageView android:layout_width="wrap_content" android:id="@+id/iv_group"
		android:scaleType="centerInside" android:layout_alignParentTop="true"
		android:layout_marginLeft="@dimen/aty_horizontal_margin"
		android:layout_alignParentLeft="true" android:layout_height="@dimen/home_head_height"
		android:src="@drawable/ic_private_placement" />
	<TextView android:id="@+id/tv_group" android:layout_width="wrap_content"
		android:layout_height="@dimen/home_head_height"
		android:layout_alignParentTop="true" android:layout_toRightOf="@id/iv_group"
		android:layout_marginLeft="@dimen/home_margin_edge" android:gravity="center_vertical"
		android:textSize="17sp" android:text="精选私募" android:textColor="#333" />

	<TextView android:id="@+id/tv_home_simu_more"
		android:layout_width="wrap_content" android:layout_height="@dimen/home_head_height"
		android:layout_alignParentTop="true" android:gravity="center_vertical"
		android:paddingLeft="@dimen/aty_horizontal_margin"
		android:layout_alignParentRight="true" android:textSize="12sp"
		android:clickable="true" android:paddingRight="@dimen/aty_horizontal_margin"
		android:background="@drawable/xml_ib_bk" android:onClick="onXmlBtClick"
		android:text="更多" android:textColor="#999" />

	<RelativeLayout android:id="@+id/lay_simu_one"
		android:layout_below="@id/tv_group" android:layout_width="match_parent"
		android:onClick="onXmlBtClick" android:layout_height="wrap_content"
		android:background="@drawable/xml_home_item_sector">

		<TextView android:id="@+id/tv_simu_title_one"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textColor="#333" android:textSize="16sp" />

		<ImageView android:id="@+id/iv_comment"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_below="@id/tv_simu_title_one" android:minHeight="20sp"
			android:scaleType="centerInside" android:layout_marginTop="10dp"
			android:src="@drawable/ic_comment" />

		<TextView android:id="@+id/tv_simu_comment_one" android:singleLine="true"
			android:layout_width="match_parent" android:layout_height="wrap_content"
			android:layout_alignBottom="@+id/iv_comment" android:layout_alignTop="@+id/iv_comment"
			android:layout_marginLeft="6dp" android:layout_toRightOf="@+id/iv_comment"
			android:gravity="center_vertical" android:layout_marginRight="35dp"
			android:textColor="#999" android:textSize="15sp" />


		<com.howbuy.control.CheckImage
			android:id="@+id/ci_home_simu_collect1" android:src="@drawable/xml_collect_sector"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_alignBottom="@+id/iv_comment" android:paddingLeft="10dp"
			android:layout_alignParentRight="true" android:layout_alignTop="@id/tv_simu_title_one"
			android:focusable="false" android:onClick="onXmlBtClick" />


		<com.actionbarsherlock.internal.widget.IcsLinearLayout
			android:background="@drawable/xml_stroke_bk" android:layout_width="match_parent"
			android:layout_height="wrap_content" android:layout_below="@+id/iv_comment"
			android:layout_marginTop="12dp" android:divider="@drawable/custom_tab_indicator_divider"
			android:orientation="horizontal" android:padding="10dp"
			android:showDividers="middle">

			<LinearLayout android:layout_width="0dp"
				android:layout_height="wrap_content" android:layout_weight="1"
				android:gravity="center_horizontal" android:orientation="vertical">

				<TextView android:id="@+id/tv_simu_des_one1" style="@style/tv_normal"
					android:textColor="#666" android:textSize="12sp" />

				<TextView android:id="@+id/tv_simu_val_one1" style="@style/tv_title_large"
					android:fontFamily="medium" android:textColor="#ffcc0000"
					android:textSize="20sp" android:layout_marginTop="5dp"
					android:textStyle="bold" />
			</LinearLayout>

			<LinearLayout android:layout_width="0dp"
				android:layout_height="wrap_content" android:layout_weight="1"
				android:gravity="center_horizontal" android:orientation="vertical">

				<TextView android:id="@+id/tv_simu_des_one2" style="@style/tv_normal"
					android:textColor="#666" android:textSize="12sp" />

				<TextView android:id="@+id/tv_simu_val_one2" style="@style/tv_title_large"
					android:fontFamily="medium" android:layout_marginTop="5dp"
					android:textColor="#ff000000" android:textSize="20sp"
					android:textStyle="bold" />
			</LinearLayout>
		</com.actionbarsherlock.internal.widget.IcsLinearLayout>
	</RelativeLayout>

	<RelativeLayout android:layout_below="@id/lay_simu_one"
		android:onClick="onXmlBtClick" android:id="@+id/lay_simu_two"
		android:layout_width="match_parent" android:layout_height="wrap_content"
		android:background="@drawable/xml_home_item_sector">

		<TextView android:id="@+id/tv_simu_title_two"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textColor="#333" android:textSize="16sp" />

		<ImageView android:id="@+id/iv_comment" android:scaleType="centerInside"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_below="@id/tv_simu_title_two" android:minHeight="20sp"
			android:layout_marginTop="10dp" android:src="@drawable/ic_comment" />

		<TextView android:id="@+id/tv_simu_comment_two"
			android:singleLine="true" android:ellipsize="end"
			android:layout_width="match_parent" android:layout_height="wrap_content"
			android:layout_alignBottom="@+id/iv_comment" android:layout_alignTop="@+id/iv_comment"
			android:layout_marginLeft="6dp" android:layout_toRightOf="@+id/iv_comment"
			android:layout_marginRight="35dp" android:gravity="center_vertical"

			android:textColor="#999" android:textSize="15sp" />

		<com.howbuy.control.CheckImage
			android:id="@+id/ci_home_simu_collect2" android:src="@drawable/xml_collect_sector"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_alignBottom="@+id/iv_comment" android:paddingLeft="10dp"
			android:layout_alignParentRight="true" android:layout_alignTop="@id/tv_simu_title_two"
			android:focusable="false" android:onClick="onXmlBtClick" />

		<com.actionbarsherlock.internal.widget.IcsLinearLayout
			android:layout_width="match_parent" android:layout_height="wrap_content"
			android:layout_below="@+id/iv_comment" android:layout_marginTop="12dp"
			android:divider="@drawable/custom_tab_indicator_divider"
			android:orientation="horizontal" android:background="@drawable/xml_stroke_bk"
			android:padding="10dp" android:showDividers="middle">

			<LinearLayout android:layout_width="0dp"
				android:layout_height="wrap_content" android:layout_weight="1"
				android:gravity="center_horizontal" android:orientation="vertical">

				<TextView android:id="@+id/tv_simu_des_two1" style="@style/tv_normal"
					android:textColor="#666" android:textSize="12sp" />

				<TextView android:id="@+id/tv_simu_val_two1" style="@style/tv_title_large"
					android:fontFamily="medium" android:layout_marginTop="5dp"
					android:textColor="#ffcc0000" android:textSize="20sp"
					android:textStyle="bold" />
			</LinearLayout>

			<LinearLayout android:layout_width="0dp"
				android:layout_height="wrap_content" android:layout_weight="1"
				android:gravity="center_horizontal" android:orientation="vertical">

				<TextView android:id="@+id/tv_simu_des_two2" style="@style/tv_normal"
					android:textColor="#666" android:textSize="12sp" />

				<TextView android:id="@+id/tv_simu_val_two2" style="@style/tv_title_large"
					android:fontFamily="medium" android:textColor="#ff000000"
					android:textSize="20sp" android:layout_marginTop="5dp"
					android:textStyle="bold" />
			</LinearLayout>
		</com.actionbarsherlock.internal.widget.IcsLinearLayout>
	</RelativeLayout>

	<ProgressBar android:id="@+id/pb_home_simu"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_centerInParent="true" />

	<View android:layout_height="1dp" android:layout_width="match_parent"
		android:background="#fff5f5f5" android:layout_below="@id/tv_group" />
</com.howbuy.control.HomeSimuLayout>