<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingBottom="60dp"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="84dp"
            android:minHeight="134dp"
            android:minWidth="134dp"
            android:scaleType="centerCrop"
            android:src="@drawable/qr_invite_friends" />

        <EditText
            android:id="@+id/et_share"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv1"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:layout_marginTop="40dp"
            android:maxLines="6"
            android:minLines="3"
            android:singleLine="false"
            android:text="@string/set_recommend_txt_des"
            android:textColor="#666"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_share"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="52dp"
            android:background="@drawable/xml_bt_buy_bk"
            android:clickable="true"
            android:gravity="center"
            android:minHeight="40dp"
            android:minWidth="186dp"
            android:onClick="onXmlBtClick"
            android:text="@string/set_recommend_txt_share"
            android:textColor="#fff"
            android:textSize="18sp" />
    </RelativeLayout>

</ScrollView>