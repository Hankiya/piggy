<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="30dp"
        android:paddingLeft="36dp"
        android:paddingRight="36dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="12dp"
                android:text="@string/set_subscribe_des"
                android:textColor="#333"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="@string/set_subscribe_edit_hint_phone"
                android:inputType="text|phone"
                android:minHeight="35dp"
                android:textColor="#666"
                android:textColorHint="#7f666666"
                android:textSize="18sp" />

            <RelativeLayout
                android:id="@+id/lay_check_week"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/set_subscribe_check_week"
                    android:textColor="#333"
                    android:textSize="18sp" />

                <CheckBox
                    android:id="@+id/cb_week"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:checked="true"
                    android:duplicateParentState="true" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lay_check_month"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/set_subscribe_check_month"
                    android:textColor="#333"
                    android:textSize="18sp" />

                <CheckBox
                    android:id="@+id/cb_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:checked="true"
                    android:duplicateParentState="true" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:background="@drawable/xml_bt_buy_bk"
                android:clickable="true"
                android:gravity="center"
                android:minHeight="40dp"
                android:minWidth="186dp"
                android:onClick="onXmlBtClick"
                android:text="@string/set_subscribe_submit"
                android:textColor="#fff"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="bottom"
            android:paddingTop="50dp"
            android:layout_weight="1" >

            <RelativeLayout
                android:id="@+id/lay_server"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:onClick="onXmlBtClick"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:minHeight="40dp"
                    android:minWidth="40dp"
                    android:src="@drawable/ic_tel" />

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:text="@string/set_about_text_server_des"
                    android:textColor="#999"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/tv1"
                    android:layout_below="@id/tv1"
                    android:text="@string/set_about_text_server_tel"
                    android:textColor="@color/text_increase"
                    android:textSize="22sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>