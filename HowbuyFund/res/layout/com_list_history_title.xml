<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ASDFHJKL"
    android:layout_width="match_parent"
    android:layout_height="@dimen/details_company_head_height"
    android:background="#eee"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/aty_horizontal_margin"
    android:paddingRight="@dimen/aty_horizontal_margin" >

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="日期"
        android:textColor="#333"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_value"
        android:layout_width="dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="净值"
        android:textColor="#333"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_valued"
        android:layout_width="dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="累计净值"
        android:textColor="#333"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_increase"
        android:layout_width="dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right"
        android:text="日涨幅"
        android:textColor="#333"
        android:textSize="14sp" />

</LinearLayout>