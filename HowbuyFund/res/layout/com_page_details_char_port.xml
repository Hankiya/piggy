<?xml version="1.0" encoding="UTF-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/howbuy.android.palmfund"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff" >

    <com.howbuy.curve.SimpleChartView
        xmlns:app="http://schemas.android.com/apk/res/howbuy.android.palmfund"
        android:id="@+id/chartview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="25dp"
        app.grid_color="#ffebebeb"
        android:background="#fff"
        android:onClick="onXmlBtClick"
        app:coord_arrow_size="20dp"
        app:coord_col="0"
        app:coord_color="#ff000000"
        app:coord_max_weight="0.05"
        app:coord_min_weight="0.1"
        app:coord_row="3"
        app:coord_text_color="#ff999999"
        app:coord_text_size="12dp"
        app:curve_color="#ff4c77aa"
        app:curve_shape_color_end="#33cfdef7"
        app:curve_shape_color_start="#33cfdef7"
        app:enable_coord="false"
        app:enable_coord_text_x="false"
        app:enable_grid="true"
        app:enable_grid_dash="false" />

    <ProgressBar
        android:id="@+id/pb_char"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_gravity="bottom"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_date1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="medium"
            android:gravity="center_vertical"
            android:paddingLeft="2dp"
            android:text="28"
            android:textColor="#666"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_date2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="medium"
            android:gravity="center_vertical|right"
            android:paddingRight="2dp"
            android:text="45"
            android:textColor="#666"
            android:textSize="12sp" />
    </LinearLayout>

</FrameLayout>